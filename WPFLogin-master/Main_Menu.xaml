        <Grid Margin="-1021.868,0,0,-543.95" Height="405.131" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="497.708" d:LayoutOverrides="HorizontalAlignment">
            <Rectangle Margin="10,21.66,0,52.195" Stroke="Black" HorizontalAlignment="Left" Width="422.431" Fill="#FF1D1C1C" RenderTransformOrigin="0.5,0.5"/>
            <Label x:Name="label" Content="Person being looked for:" Height="36.72" Margin="10,23.622,3,10" VerticalAlignment="Top" FontFamily="Verdana" FontSize="16" HorizontalAlignment="Left" Width="209.405" Background="{x:Null}" Foreground="White" BorderThickness="0,0,1,1" BorderBrush="#FF979292"/>
            <Rectangle  HorizontalAlignment="Left" Margin="10,60.342,0,137.503" Stroke="Black" Width="209.405" StrokeThickness="2">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="user-1-glyph-icon_MkuBPp8O.png" Stretch="UniformToFill"/>
                </Rectangle.Fill>
            </Rectangle>
            <Label x:Name="label1" Content="
                   
                   found:" Height="27.788" Margin="318.578,0,69.757,363.973" VerticalAlignment="Bottom" FontFamily="Verdana" FontSize="16"/>
            <Rectangle Margin="219.405,60.342,0,137.503" Stroke="Black" HorizontalAlignment="Left" Width="213.026" StrokeThickness="2">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="user-1-glyph-icon_MkuBPp8O.png" Stretch="UniformToFill"/>
                </Rectangle.Fill>
            </Rectangle>
            <Button x:Name="button" Content="Confirm" HorizontalAlignment="Left" Height="42.376" Margin="48.352,0,0,79.746" VerticalAlignment="Bottom" Width="83.176" FontFamily="Verdana" FontSize="16" Background="#FF7FF93A"/>
            <Button x:Name="button_Copy" Content="   Keep &#xD;&#xA;Searching" HorizontalAlignment="Left" Height="42.376" Margin="136.528,0,0,79.746" VerticalAlignment="Bottom" Width="83.176" FontFamily="Verdana" FontSize="13.333" Background="#FFF34D4D" d:LayoutOverrides="HorizontalAlignment"/>

        </Grid>
        <Label x:Name="label2" Content="" HorizontalAlignment="Left" Margin="-277.498,3.594,0,0" d:LayoutOverrides="Height"/>
        <Label x:Name="Welcome_text" Content="Welcome, Today is " HorizontalAlignment="Left" Margin="-347.141,0,0,-4.233" d:LayoutOverrides="Height" Width="166.344" Initialized="label3_Initialized"/>
        <Rectangle Fill="#FF1D1C1C" HorizontalAlignment="Right" Height="240.437" Margin="-347.141,0,7.141,-589.111" Stroke="Black" VerticalAlignment="Bottom" Width="340"/>
        <Rectangle x:Name="search_for_image" Height="170" Margin="-347.141,0,177.141,-518.674" Stroke="Black" VerticalAlignment="Bottom">
            <Rectangle.Fill>
                <ImageBrush ImageSource="user-1-glyph-icon_MkuBPp8O.png" Stretch="UniformToFill"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle HorizontalAlignment="Left" Height="170" Margin="-177.141,0,0,-518.674" Stroke="Black" VerticalAlignment="Bottom" Width="170">
            <Rectangle.Fill>
                <ImageBrush ImageSource="user-1-glyph-icon_MkuBPp8O.png" Stretch="UniformToFill"/>
            </Rectangle.Fill>
        </Rectangle>
        <Label x:Name="label3" Content="Searching for:" HorizontalAlignment="Left" Margin="-347.141,0,0,-543.95" VerticalAlignment="Bottom" Height="25.276" Width="170" FontFamily="Verdana" Foreground="#FFFFF3F3" BorderBrush="#FF5F5C5C" BorderThickness="0,0,0,1" HorizontalContentAlignment="Center"/>
        <Label x:Name="label3_Copy" Content="Potential match:" HorizontalAlignment="Left" Margin="-177.141,0,0,-543.95" VerticalAlignment="Bottom" Height="25.276" Width="170" FontFamily="Verdana" Foreground="#FFFFF3F3" BorderBrush="#FF5F5C5C" BorderThickness="0,0,0,1" HorizontalContentAlignment="Center"/>
        <!--Start search button-->
        <Button x:Name="Start_Search" Style="{StaticResource SearchStyle}" Content="Start Search" Margin="-347.141,565.677,0,-571.886" Width="120.627" Height="27.936" Background="White" Foreground="White" BorderBrush="White" OpacityMask="White" Click="Start_Search_Click" Cursor="Hand" HorizontalAlignment="Left" BorderThickness="0"/>
        <!--continue search button-->
        <Button x:Name="Continue_Searching" Style="{StaticResource SearchStyle}" Content="Continue Searching" Margin="-127.768,565.677,7.141,-571.886" Height="27.936" Background="White" Foreground="White" BorderBrush="White" OpacityMask="White" Cursor="Hand" BorderThickness="0" />
        <Button x:Name="Continue_Searching_Copy" Style="{StaticResource SearchStyle}" Content="Stop" Margin="-221.514,565.677,132.768,-571.886" Width="88.746" Height="27.936" Background="White" Foreground="White" BorderBrush="White" OpacityMask="White" Cursor="Hand" />

    </Grid>
</Window>